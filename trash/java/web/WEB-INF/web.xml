<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <display-name>РеМейлер</display-name>

    <servlet>
        <servlet-name>Mail Servlet</servlet-name>
        <servlet-class>rsv.MailServlet</servlet-class>
        <!--<load-on-startup>1</load-on-startup>-->
        <init-param>
            <description>path to store mail</description>
            <param-name>path</param-name>
            <param-value>/tmp/mail_status/</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Mail Servlet</servlet-name>
        <url-pattern>/do</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>cpath</param-name>
        <param-value>d:/</param-value>
    </context-param>


</web-app>
